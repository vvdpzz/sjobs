<p id="notice"><%= notice %></p>

<p>
  <b>User:</b>
  <%= @question.user.username %>
</p>

<p>
  <b>Title:</b>
  <%= @question.title %>
</p>

<p>
  <b>Content:</b>
  <%= @question.content %>
</p>


<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>

<div id="answers">
</div>
<%= form_for [@question, Answer.new] do |f| %>
  <%= f.hidden_field :question_id, :value => @question.id %>
	<%= f.text_area :content %>
	<%= f.submit %>
<% end %>
