<ul class="tabs">
  <li class="active"><a href="/">付费</a></li>
  <li><a href="/free">免费</a></li>
  <li><a href="/watch">关注</a></li>
</ul>
<div class="row">
	<div class="col9">
		<div id="questions">
			<%= render "free", :questions => @questions %>
		</div>
		<div id="load-more" class="loading">
			<div class="blueText">更多问题</div>
			<div class="spinner"></div>
		</div>
	</div>
	<div class="col3">Hello World Hello World Hello World Hello World Hello World Hello World Hello World Hello World Hello World Hello World Hello World Hello World Hello World Hello World Hello World </div>
</div>
<script>
var current_page = 1;
$(function() {
	$("#load-more").live("click",function(){
		$.ajax({
			url: location.href,
			type: "get",
			dataType: "script",
			data: {page: ++current_page},
			beforeSend: function(){
				$("#load-more .blueText").hide();
				$("#load-more .spinner").show();
			},
			complete: function(){
				$("#load-more .spinner").hide();
				$("#load-more .blueText").show();
			}
		});
		return false;
	});
});
</script>