<% questions.each do |question| %>
	<%= div_for(question, :class => 'clearfix') do %>
		<div class="status">
			<div class="square"><div class="count"><%= question.answers_count %></div>回答</div>
			<div class="square"><div class="count"><%= question.votes_count %></div>投票</div>
		</div>
		<div class="summary">
			<div class="excerpt"><h5><%= link_to question.title, question %></h5></div>
			<div class="timestamp"><%= time_ago_in_words question.created_at %>前</div>
		</div>
	<% end %>
<% end %>